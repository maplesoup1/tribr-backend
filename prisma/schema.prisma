// Tribr Backend - Minimal Schema with Supabase Auth
// Only Users table, all authentication handled by Supabase

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Single Users table with all necessary fields
model User {
  id                 String    @id @default(uuid())

  // Authentication (managed by Supabase Auth)
  phone              String    @unique
  countryCode        String    @default("+1")
  email              String?   @unique

  // Basic Info
  fullName           String?

  // Profile (merged from profiles table)
  photoUrl           String?
  archetypes         String[]  @default([])  // max 2 items
  interests          String[]  @default([])
  bio                String?

  // Onboarding
  onboardingComplete Boolean   @default(false)

  // Timestamps
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@map("users")
}
